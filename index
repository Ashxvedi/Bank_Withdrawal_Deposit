<body>

    <div class="container">
        <div class="balance-display">
            <span>Balance:</span>
            <span class="balance" id="balance">1000.00</span>
        </div>

        <div class="buttons-container">
            <button class="deposit-btn" id="depositBtn">Deposit</button>
            <button class="withdraw-btn" id="withdrawBtn">Withdraw</button>
        </div>
    </div>

    <script>
        const balanceDisplay = document.getElementById('balance');
        let balance = parseFloat(balanceDisplay.textContent);

        // Deposit functionality
        document.getElementById('depositBtn').addEventListener('click', () => {
            const amount = prompt("Enter deposit amount:");
            if (amount && !isNaN(amount) && parseFloat(amount) > 0) {
                balance += parseFloat(amount);
                balanceDisplay.textContent = balance.toFixed(2);
            } else {
                alert("Please enter a valid deposit amount.");
            }
        });

        // Withdraw functionality
        document.getElementById('withdrawBtn').addEventListener('click', () => {
            const amount = prompt("Enter withdrawal amount:");
            if (amount && !isNaN(amount) && parseFloat(amount) > 0 && parseFloat(amount) <= balance) {
                balance -= parseFloat(amount);
                balanceDisplay.textContent = balance.toFixed(2);
            } else {
                alert("Invalid withdrawal amount or insufficient funds.");
            }
        });
    </script>

</body>
